<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/chardham"/>
            <TextView
                android:id="@+id/chardham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chardham"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/meenakshi"/>
            <TextView
                android:id="@+id/meenakshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meenakshi Temple"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/goldentemple"/>
            <TextView
                android:id="@+id/goldentemple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Temple"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/alexa"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:clickable="true"
                    app:backgroundTint="#F8FDFC"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="32dp"
                    app:srcCompat="@drawable/alexa" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>